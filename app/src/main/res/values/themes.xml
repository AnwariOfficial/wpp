<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wpp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/dark_blue</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="customNavigationLayout">@style/navigation_theme</item>
    </style>
    <style name="navigation_theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/text_color</item>
        <item name="android:textColor">@color/pink</item>
        <item name="background">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="line">
        <item name="background">@color/pink</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:background">@color/dark_blue</item>
    </style>
</resources>